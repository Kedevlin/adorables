<%= form_for @link, url: { action: @action } do |f| %>
<fieldset class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>
  <%= f.label :url, "URL" %>
  <%= f.url_field :url, required: true, class: "form-control" %>
  <% if flash[:alert] %>
    <%= flash.alert %>
  <% end %>
  <br>
  <%= f.submit @what + " Link", class: "btn btn-primary btn-block" %>
<% end %>
</fieldset>
<%= button_to("Delete Link", link_path(@link), method: "delete", onclick: "return confirm('Are you sure?')", title: "Delete", class: "btn btn-primary btn-block") if !@link.id.nil? %>
