<%= form_for @link, url: { action: @action } do |f| %>
<fieldset class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>
  <%= f.label :url, "URL" %>
  <%= f.url_field :url, required: true, class: "form-control" %>
  <br>
  <%= f.submit "Add Link", class: "btn btn-primary" %>
<% end %>
</fieldset>

<% if flash[:alert] %>
  <%= flash.alert %>
<% end %>
