<% if @current_user %>
  <%= "Hello #{@current_user.name}" %>
    <%= link_to "ADD A LINK", new_link_path, class: "btn btn-primary" %>
<% else %>
  <%= link_to("/auth/github") do %>
     <%= fa_icon("github 3x", class: "btn btn-primary") %><h1>LOG IN WITH GITHUB</h1>
  <% end %>
<% end %>

<% @links.each do |link| %>
<div>
  link.title
</div>
<% end %>
